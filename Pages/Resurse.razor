@page "/resurse"
@using MudBlazor
@inject NavigationManager NavigationManager
@attribute [Authorize]

<PageTitle>Mental Health Tracker - Resources</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <div class="d-flex justify-space-between align-center mb-4">
        <MudText Typo="Typo.h3">Mental Health Resources</MudText>
        <MudButton Variant="Variant.Outlined" 
                  Color="Color.Primary" 
                  StartIcon="@Icons.Material.Filled.ArrowBack"
                  Href="/"
                  Class="ml-auto">
            Back to home
        </MudButton>
    </div>

    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudCard Elevation="3" Class="rounded-lg">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">Articles</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIcon Icon="@Icons.Material.Filled.Article" Color="Color.Primary" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudList Clickable="true">
                        <MudListItem>
                            <MudText Typo="Typo.h6">The importance of sleep for mental health</MudText>
                            <MudText Typo="Typo.body2" Class="mt-1">Adequate sleep is essential for maintaining good mental health.</MudText>
                            <div class="d-flex justify-end mt-2">
                                <MudButton Variant="Variant.Text" 
                                         Color="Color.Primary" 
                                         EndIcon="@Icons.Material.Filled.Launch"
                                         Href="https://www.who.int/news-room/fact-sheets/detail/mental-health"
                                         Target="_blank">
                                    Read on WHO
                                </MudButton>
                            </div>
                        </MudListItem>
                        <MudDivider />
                        <MudListItem>
                            <MudText Typo="Typo.h6">Relaxation techniques for stress reduction</MudText>
                            <MudText Typo="Typo.body2" Class="mt-1">Learn simple relaxation techniques to reduce daily stress levels.</MudText>
                            <div class="d-flex justify-end mt-2">
                                <MudButton Variant="Variant.Text" 
                                         Color="Color.Primary" 
                                         EndIcon="@Icons.Material.Filled.Launch"
                                         Href="https://www.mayoclinic.org/healthy-lifestyle/stress-management/in-depth/relaxation-technique/art-20045368"
                                         Target="_blank">
                                    Read on Mayo Clinic
                                </MudButton>
                            </div>
                        </MudListItem>
                        <MudDivider />
                        <MudListItem>
                            <MudText Typo="Typo.h6">Benefits of physical exercise for mental health</MudText>
                            <MudText Typo="Typo.body2" Class="mt-1">Regular physical exercise can significantly improve mood.</MudText>
                            <div class="d-flex justify-end mt-2">
                                <MudButton Variant="Variant.Text" 
                                         Color="Color.Primary" 
                                         EndIcon="@Icons.Material.Filled.Launch"
                                         Href="https://www.helpguide.org/articles/healthy-living/the-mental-health-benefits-of-exercise.htm"
                                         Target="_blank">
                                    Read on HelpGuide
                                </MudButton>
                            </div>
                        </MudListItem>
                    </MudList>
                </MudCardContent>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" sm="6">
            <MudCard Elevation="3" Class="rounded-lg">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">Exercises</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIcon Icon="@Icons.Material.Filled.FitnessCenter" Color="Color.Secondary" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudList Clickable="true">
                        <MudListItem>
                            <MudText Typo="Typo.h6">Breathing exercises</MudText>
                            <MudText Typo="Typo.body2" Class="mt-1">Simple breathing techniques for anxiety reduction.</MudText>
                            <div class="d-flex justify-end mt-2">
                                <MudButton Variant="Variant.Text" 
                                         Color="Color.Secondary" 
                                         EndIcon="@Icons.Material.Filled.PlayArrow"
                                         Href="https://www.youtube.com/watch?v=1Dv-ldGLnIY"
                                         Target="_blank">
                                    Watch exercises
                                </MudButton>
                            </div>
                        </MudListItem>
                        <MudDivider />
                        <MudListItem>
                            <MudText Typo="Typo.h6">Guided meditation</MudText>
                            <MudText Typo="Typo.body2" Class="mt-1">Guided meditation for relaxation and stress reduction.</MudText>
                            <div class="d-flex justify-end mt-2">
                                <MudButton Variant="Variant.Text" 
                                         Color="Color.Secondary" 
                                         EndIcon="@Icons.Material.Filled.PlayArrow"
                                         Href="https://www.youtube.com/watch?v=O-6f5wQXSu8"
                                         Target="_blank">
                                    Start meditation
                                </MudButton>
                            </div>
                        </MudListItem>
                        <MudDivider />
                        <MudListItem>
                            <MudText Typo="Typo.h6">Gratitude journal</MudText>
                            <MudText Typo="Typo.body2" Class="mt-1">Exercises to develop an attitude of gratitude.</MudText>
                            <div class="d-flex justify-end mt-2">
                                <MudButton Variant="Variant.Text" 
                                         Color="Color.Secondary" 
                                         EndIcon="@Icons.Material.Filled.PlayArrow"
                                         Href="https://www.youtube.com/watch?v=WPPPFqsECz0"
                                         Target="_blank">
                                    Start exercise
                                </MudButton>
                            </div>
                        </MudListItem>
                    </MudList>
                </MudCardContent>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" Class="mt-4">
            <MudCard Elevation="3" Class="rounded-lg">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">Support Lines</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIcon Icon="@Icons.Material.Filled.Call" Color="Color.Info" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="12" sm="6">
                            <MudAlert Severity="Severity.Info" Variant="Variant.Filled" Class="mud-elevation-3">
                                <div class="d-flex flex-column">
                                    <MudText Typo="Typo.h6">National Suicide Prevention Lifeline</MudText>
                                    <MudText Typo="Typo.body1" Class="mt-2">Free call, available 24/7</MudText>
                                    <MudText Typo="Typo.h6" Class="mt-2">
                                        <MudIcon Icon="@Icons.Material.Filled.Phone" Class="mr-2" />
                                        <MudLink Href="tel:988" Color="Color.Info">988</MudLink>
                                    </MudText>
                                    <MudText Typo="Typo.body2" Class="mt-2">
                                        <MudLink Href="https://988lifeline.org/" Target="_blank" Color="Color.Info">
                                            Visit official website
                                        </MudLink>
                                    </MudText>
                                </div>
                            </MudAlert>
                        </MudItem>
                        <MudItem xs="12" sm="6">
                            <MudAlert Severity="Severity.Info" Variant="Variant.Filled" Class="mud-elevation-3">
                                <div class="d-flex flex-column">
                                    <MudText Typo="Typo.h6">Crisis Text Line</MudText>
                                    <MudText Typo="Typo.body1" Class="mt-2">Text "HELLO" to 741741</MudText>
                                    <MudText Typo="Typo.h6" Class="mt-2">
                                        <MudIcon Icon="@Icons.Material.Filled.Message" Class="mr-2" />
                                        741741
                                    </MudText>
                                    <MudText Typo="Typo.body2" Class="mt-2">
                                        <MudLink Href="https://www.crisistextline.org/" Target="_blank" Color="Color.Info">
                                            Visit official website
                                        </MudLink>
                                    </MudText>
                                </div>
                            </MudAlert>
                        </MudItem>
                        <MudItem xs="12" sm="6">
                            <MudAlert Severity="Severity.Info" Variant="Variant.Filled" Class="mud-elevation-3">
                                <div class="d-flex flex-column">
                                    <MudText Typo="Typo.h6">SAMHSA National Helpline</MudText>
                                    <MudText Typo="Typo.body1" Class="mt-2">24/7, 365 days a year</MudText>
                                    <MudText Typo="Typo.h6" Class="mt-2">
                                        <MudIcon Icon="@Icons.Material.Filled.Phone" Class="mr-2" />
                                        <MudLink Href="tel:1-800-662-4357" Color="Color.Info">1-800-662-4357</MudLink>
                                    </MudText>
                                    <MudText Typo="Typo.body2" Class="mt-2">
                                        <MudLink Href="https://www.samhsa.gov/find-help/national-helpline" Target="_blank" Color="Color.Info">
                                            Visit official website
                                        </MudLink>
                                    </MudText>
                                </div>
                            </MudAlert>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>