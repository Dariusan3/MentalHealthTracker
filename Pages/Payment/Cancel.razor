@page "/payment/cancel"
@inject NavigationManager NavigationManager

<PageTitle>Payment Cancelled</PageTitle>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-times-circle text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h2 class="card-title">Payment Cancelled</h2>
                    <p class="card-text lead">Your payment has been cancelled.</p>
                    <p>No amount has been charged to your account.</p>
                    
                    <hr>
                    
                    <button class="btn btn-primary mt-3" @onclick="GoToSubscription">
                        Try again
                    </button>
                    <button class="btn btn-outline-secondary mt-3 ms-2" @onclick="GoToHome">
                        Back to home
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoToSubscription()
    {
        NavigationManager.NavigateTo("/subscription");
    }

    private void GoToHome()
    {
        NavigationManager.NavigateTo("/");
    }
}